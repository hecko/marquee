#!/usr/bin/perl

use strict;
use warnings;
use LWP::UserAgent;
use CGI;

my $url = 'http://localhost:3000/add';

my $ua       = LWP::UserAgent->new();
my $response = $ua->post( $url, {
                    name => 'name',
                    source => 'sender'
                } );

my $content  = $response->decoded_content();

my $cgi = CGI->new();
print $cgi->header(), $content;
